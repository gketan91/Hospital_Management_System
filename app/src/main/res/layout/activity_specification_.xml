<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Specification_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Specification"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50sp">
            </TextView>
            <Button
                android:id="@+id/Button_chooseImage_Specification_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Image">
            </Button>
            <ImageView
                android:id="@+id/Image_chooseImage_Specification_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ImageView>
            <EditText
                android:id="@+id/add_specification_id"
                android:layout_margin="20dp"
                android:inputType="text"
                android:textSize="30sp"
                android:hint="Add Specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <Button
                android:id="@+id/submit_specification_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/submit">
            </Button>
        </LinearLayout>
    </ScrollView>


</LinearLayout>